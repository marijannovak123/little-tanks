<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marijannovak.littletanks.RegisterActivity"
    android:background="@drawable/register_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:hint="@string/enter_your_e_mail_address"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:hint="@string/enter_your_password"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etPasswordCheck"
            android:inputType="textPassword"
            android:hint="@string/repeat_your_password"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:layout_width="111dp"
            android:layout_height="44dp"
            android:id="@+id/btnSignUp"
            android:text="@string/sign_up"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A80505"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="20dp"
            />

        <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/googleSignIn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinProgress2"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"/>



</RelativeLayout>
