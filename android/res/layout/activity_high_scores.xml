<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marijannovak.littletanks.HighScores"
    android:background="@drawable/scores_bg">

    <TextView
        android:id="@+id/tvHighScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="@string/local_highscores"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:shadowColor="#A80505"
        android:shadowRadius="5"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvLocalScores"
        android:layout_below="@id/tvHighScores"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvOnlineScores"
        android:layout_below="@id/tvHighScores" />

    <ImageButton
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinProgress"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"/>

</RelativeLayout>
